<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerificationActivity"
    android:background="@drawable/gradient"
    android:padding="16dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_back"
        android:id="@+id/verification_activity_backImage"/>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_below="@id/verification_activity_backImage"
        android:layout_width="wrap_content"
        android:id="@+id/heading"
        android:layout_height="wrap_content"
        android:text="Almost Done!"
        android:textColor="@android:color/white"
        android:textAppearance="@android:style/TextAppearance.Large"/>

    <TextView
        android:id="@+id/subhead"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A verification email has been sent to"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@android:color/white"
        android:layout_below="@id/heading"/>
    <TextView
        android:id="@+id/verification_activity_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/subhead"/>

    <TextView
        android:id="@+id/subhead_2"

        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please check your email and follow \nthe link to activate your \nIs Wakt account"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@android:color/white"
        android:layout_below="@id/verification_activity_email"/>

    <Button
        android:id="@+id/verification_activity_resendbutton"
        android:layout_marginTop="30dp"
        android:layout_below="@id/subhead_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button1"
        android:text="Resend Verification"
        android:paddingHorizontal="15dp"
        android:textColor="@android:color/white"
        />

</RelativeLayout>